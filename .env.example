# RisingWave connection
RW_HOST=127.0.0.1
RW_PORT=4566
RW_USER=root
RW_PASSWORD=
RW_DATABASE=dev
RW_SCHEMA=public

# Upstream PostgreSQL
PG_HOST=127.0.0.1
PG_PORT=5432
PG_USER=postgres
PG_PASSWORD=secret
PG_DATABASE=mydb
PG_SCHEMA=public

# Source and table configuration
RW_SOURCE_NAME=postgres_cdc_source
TABLE_NAME=my_table
PG_TABLE=public.my_upstream_table

# Optional CDC tuning
CDC_SLOT_NAME=mydb_slot
CDC_PUBLICATION=rw_publication
CDC_AUTO_SCHEMA=false
# SSL_MODE=verify-full
# SSL_ROOT_CERT=/path/to/ca.pem
